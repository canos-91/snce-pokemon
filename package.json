{
  "name": "snce-pokemon",
  "version": "0.1.0",
  "description": "Dockerized environment with a MySQL database, a Next.js application.",
  "private": true,
  "author": "Marco Canopoli",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "migrate:development": "prisma migrate dev --name init && next dev",
    "migrate:production": "prisma migrate deploy && next start",
    "lint": "next lint && npm run lint:css:fix",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint:css:fix": "stylelint --fix **/*.{scss,css}",
    "build:app": "docker-compose build app",
    "start:db": "docker-compose up snce-pokemon-db",
    "start:app": "docker-compose up app",
    "clean": "docker-compose down -v"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@types/node": "18.15.11",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "axios": "^1.3.4",
    "classnames": "^2.3.2",
    "dotenv": "^16.0.3",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "next": "13.2.4",
    "prisma": "^4.12.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "sass": "^1.60.0",
    "stylelint": "^15.4.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-scss": "^4.6.0"
  }
}
